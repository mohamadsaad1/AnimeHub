<%  animes.forEach(anime => { %>
  <a href="/animeSearch/<%= anime.mal_id %> "> 
    <img src="<%= anime.image_url%>" alt="<%= anime.title %>">
  </a>
<h1><%= anime.title%></h1>

<form action="/profiles/anime" method="POST">

<input type="text" name="name" hidden value="<%= anime.title %>">
<input type="text" name="imageUrl" hidden value="<%= anime.image_url %>">

<button type="submit"> Add to watchlist</button>
</form>

<form action="/profiles/animeComplete" method="POST">
  <input type="text" name="name" hidden value="<%= anime.title %>">
  <input type="text" name="imageUrl" hidden value="<%= anime.image_url %>">
<button type="submit"> completed</button>
</form>

