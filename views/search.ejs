<%- include('./partials/html-head') %>
<%- include('./partials/nav') %>
<link rel="stylesheet" href="/stylesheets/search.css">
<link rel="stylesheet" href="/stylesheets/style.css">

<div id="narutoLuffy">
<% animes.forEach(anime => { %>
  <h1><%= anime.title%></h1>
  <a href="/animeSearch/<%= anime.mal_id %> "> 
    <img src="<%= anime.image_url%>" alt="<%= anime.title %>">
  </a>
  <h2 hidden >Type: <%= anime.type%> </h2>
  <h2 hidden >Episodes: <%= anime.episodes%></h2>
  <h2 hidden >Rating: <%= anime.score%></h2>
  <h2 hidden >Airing: <%= anime.airing%></h2>
  <h2 hidden >Synopsis: <%= anime.synopsis%></h2>
  <h2 hidden >Aired: <%= anime.start_date%></h2>
  <h2 hidden>rated: <%= anime.rated%></h2>
  
  <form action="/profiles/anime" method="POST">
    <input type="text" name="name" hidden value="<%= anime.title %>">
    <input type="text" name="imageUrl" hidden value="<%= anime.image_url %>">
    <input type="text" name="type" hidden value="<%= anime.type %>">
    <input type="text" name="episodes" hidden value="<%= anime.episodes %>">
    <input type="text" name="score" hidden value="<%= anime.score %>">
    <input type="text" name="airing" hidden value="<%= anime.airing %>">
    <input type="text" name="rated" hidden value="<%= anime.rated %>">
    <input type="text" name="synopsis" hidden value="<%= anime.synopsis %>">
    <button type="submit"> Add to watchlist</button>
  </form>
  
  <form action="/profiles/animeComplete" method="POST">
    <input type="text" name="name" hidden value="<%= anime.title %>">
    <input type="text" name="imageUrl" hidden value="<%= anime.image_url %>">
    <input type="text" name="type" hidden value="<%= anime.type %>">
    <input type="text" name="episodes" hidden value="<%= anime.episodes %>">
    <input type="text" name="score" hidden value="<%= anime.score %>">
    <input type="text" name="airing" hidden value="<%= anime.airing %>">
    <input type="text" name="rated" hidden value="<%= anime.rated %>">
    <input type="text" name="synopsis" hidden value="<%= anime.synopsis %>">
    <button type="submit"> completed</button>
  </form>
  <% }) %> 
</div>


<%- include('./partials/footer') %>


html {
  box-sizing: border-box
}

/* The Universal Selector */
*, /* All elements*/
*::before, /* All ::before pseudo-elements */
*::after { /* All ::after pseudo-elements */
  /* height & width will now include border & padding by default
     but can be over-ridden as needed */
  box-sizing: inherit;
}

/* resets font size to be 62.5% of the user preference - 
     in most browser configurations this will be 10px */
:root {
    font-size: 62.5%
}

body {
  background: URl("luffy.jpg");
  background-repeat: no-repeat;
  background-position:center;
  background-size: cover;
  align-items: center;

  /* Use a system font, if none are available use an available sans-sarif font */
  font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
  margin: 0;
}

nav {
  background-color: white;
  font-size: 1.6rem;
  display: flex;
  justify-content: center;
}

main {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

h1 {
  font-size: 3.6rem;
}

h2 {
  font-size: 3rem;
}

h3 {
  font-size: 2.4rem;
}

ul {
  list-style-type: none;
}

p, label, li, button, input {
  font-size: 1.8rem;
}

label {
  font-weight: bold;
}

section {
  padding: 50px;
}

a {
  color: #00B7FF;
}

pre {
  font-size: 1.4rem;
}

nav > a {
  margin: 1rem 3rem;
  text-decoration: none;
  font-size: 2.4rem;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn {
  margin: 1.6rem 0;
}

.link {
  padding: 1rem 0;
  font-size: 1.8rem;
  display: inline-block;
}

.profile-avatar {
  margin-top: 50px;
}